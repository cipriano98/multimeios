<div>
    <h1>Perfil do funcion√°rio</h1>

    <form action="../employee/alter/{{Employee.id}}" method="POST" class="needs-validation" novalidate>

        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="fullname">Nome Completo</label>
                <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Nome Completo"
                    required value="{{Employee.fullname}}">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label for="cpf">CPF</label>
                <input type="text" class="form-control" id="cpf" name="cpf" placeholder="CPF" required value="{{Employee.cpf}}">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required value="{{Employee.email}}">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label for="date">Data de nascimento</label>
                <input type="date" class="form-control" id="date" name="datebirth" placeholder="Data de nascimento" required value="{{Employee.datebirth}}">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
           <div class="col-md-4 mb-3">
            <label for="name">Como gostaria de ser chamado?</label>
            <input type="text" class="form-control" name="preferencialname" id="name" placeholder="Nome preferido" required value="{{Employee.preferencialname}}">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        </div>

        <button class="btn btn-primary" type="submit">Alterar</button>
    </form>
</div>
