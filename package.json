{
    "name": "multimeios",
    "description": "My new description app",
    "version": "0.0.5",
    "author": "Natan Cipriano <natancipriano98@gmail.com>",
    "main": "dist/server.js",
    "private": true,
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,html}'",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "dev": "nodemon",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "node dist/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "save": "prisma migrate save --create-db --experimental",
        "up": "prisma migrate up --experimental --verbose",
        "generate": "prisma generate",
        "studio": "prisma studio",
        "pm2": "pm2 start pm2.config.ts --env production",
        "pm2-dev": "pm2 start pm2.config.ts --watch --ignore-watch='node_modules'",
        "stop": "pm2 stop pm2.config.ts",
        "delete": "pm2 delete pm2.config.ts",
        "restart": "pm2 restart pm2.config.ts",
        "prisma": "yarn save && yarn up && yarn generate"
    },
    "dependencies": {
        "@nestjs/common": "^6.2.4",
        "@nestjs/core": "^6.2.4",
        "@nestjs/jwt": "^7.1.0",
        "@nestjs/passport": "^7.1.0",
        "@nestjs/platform-express": "^6.2.4",
        "@prisma/client": "^2.7.1",
        "bcrypt": "^5.0.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "cookie-parser": "^1.4.5",
        "hbs": "^4.0.4",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^2.6.3",
        "rxjs": "^6.5.2"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.2.4",
        "@prisma/cli": "^2.7.1",
        "@types/bcrypt": "^3.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.8",
        "@types/hbs": "^4.0.1",
        "@types/jest": "^24.0.13",
        "@types/node": "^12.0.2",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.7",
        "concurrently": "^4.1.0",
        "jest": "^24.8.0",
        "nodemon": "^1.19.1",
        "prettier": "^1.17.1",
        "supertest": "^4.0.2",
        "ts-jest": "24.0.2",
        "ts-node": "8.2.0",
        "ts-node-dev": "^1.0.0-pre.63",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.16.0",
        "typescript": "3.4.5",
        "wait-on": "^3.2.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
